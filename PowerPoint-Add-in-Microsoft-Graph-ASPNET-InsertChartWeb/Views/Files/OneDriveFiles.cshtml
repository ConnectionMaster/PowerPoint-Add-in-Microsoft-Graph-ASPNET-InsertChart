@model IEnumerable<PowerPointAddinMicrosoftGraphASPNETInsertChart.Models.ExcelWorkbook>

@{
    ViewBag.Title = "OneDriveFiles";
}

@* This view requires Spinner.js, but the Office.initialize in that file does not run. Workaround is to
load it as part of the JavaScript bundle in the _Layout.cshtml. *@
<script src="~/Scripts/UIFabric.js" type="text/javascript"></script>
<script src="~/Scripts/Spinner.js" type="text/javascript"></script>


<div id="header" class="ms-bgColor-neutralLight header">
    <div class="ms-font-m centeredText headerText">Workbooks</div>
</div>

<div class="indentFromPaneEdge headerGap"> 
    <div id="ChartLinks">
        <div class="ms-font-m ms-fontColor-neutralPrimary ms-fontWeight-regular file-item-intro">Select a workbook:</div>
        
        @* Display the workbooks in OneDrive. *@      
        <ul class="ms-List ordered-list">
            @foreach (var item in Model)
            {
            <li class="ms-ListItem">                
                <span class="ms-ListItem-fileName">@Html.ActionLink(item.Name, "Index", "Charts", new { item.Id }, new { @onclick = "app.changeUI(); return true;", @class = "ms-Link ms-font-m" })</span>
                <div class="clearfix"></div>
            </li>
            }
        </ul>

    </div>

    <div id="spinnerUI" style="display:none">      
        <div class="ms-font-m ms-fontColor-neutralPrimary ms-fontWeight-regular file-item-status">One moment while we get that for you...</div>
        <div class="ms-Spinner"></div>
    </div>
</div>

